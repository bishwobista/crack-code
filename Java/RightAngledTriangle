import java.io.*;
 
// Java code to demonstrate right star triangle
public class GeeksForGeeks {
    // Function to demonstrate printing pattern
    public static void StarRightTriangle(int n)
    {
        int a, b;
 

        for (a = 0; a < n; a++) {
 

            for (b = 0; b <= a; b++) {
                // printing stars
                System.out.print("* ");
            }
 
            System.out.println();
        }
    }
 
    public static void main(String args[])
    {
        int k = 6;
        StarRightTriangle(k);
    }
}
